{
	"name": "npm-packages",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "tsx",
		"prepare": "husky install && chmod ug+x .husky/*"
	},
	"lint-staged": {
		"**/*.(ts|tsx)": [
			"rome format --write"
		]
	},
	"devDependencies": {
		"@swc-node/register": "^1.6.3",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"rome": "^12.1.3",
		"tsup": "^7.1.0",
		"tsx": "^3.12.7"
	}
}
