{
	"name": "@hyoretsu/configs",
	"version": "1.2.8",
	"type": "module",
	"license": "MIT",
	"files": [
		"dist"
	],
	"exports": {
		"./biome": "./dist/biome/base.json",
		"./biome-nest": "./dist/biome/nest.json",
		"./biome-react": "./dist/biome/react.json",
		"./commitlint": {
			"types": "./dist/commitlint/index.d.ts",
			"import": "./dist/commitlint/index.js",
			"require": "./dist/commitlint/index.cjs"
		},
		"./eslint": {
			"types": "./dist/eslint/index.d.ts",
			"import": "./dist/eslint/index.js",
			"require": "./dist/eslint/index.cjs"
		},
		"./lint-staged": {
			"types": "./dist/lint-staged/index.d.ts",
			"import": "./dist/lint-staged/index.js",
			"require": "./dist/lint-staged/index.cjs"
		},
		"./ts": "./dist/ts/base.json",
		"./ts-backend": "./dist/ts/backend.json",
		"./ts-frontend": "./dist/ts/frontend.json",
		"./ts-nest": "./dist/ts/nest.json",
		"./ts-lib": "./dist/ts/lib.json"
	},
	"homepage": "https://github.com/hyoretsu/npm-packages/tree/main/packages/configs",
	"bugs": {
		"url": "https://github.com/hyoretsu/npm-packages/issues",
		"email": "hyoretsu@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hyoretsu/npm-packages.git"
	},
	"author": {
		"name": "Aran Leite",
		"email": "hyoretsu@gmail.com",
		"url": "https://www.linkedin.com/in/aranleite"
	},
	"scripts": {
		"build": "tsup && tsc -p tsconfig.build.json && bun ./build/json.ts Biome && bun ./build/json.ts TS",
		"format": "bun format:biome . && bun format:eslint .",
		"format:biome": "biome check --diagnostic-level=error --write --unsafe",
		"format:eslint": "eslint --quiet --fix",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-config-biome": "^2.1.3",
		"typescript-eslint": "^8.48.1"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@commitlint/types": "^20.4.0",
		"@types/node": "^25.2.3",
		"es-toolkit": "^1.42.0",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@commitlint/prompt-cli": "^20.4.1",
		"@eslint/js": "^9.0.0",
		"eslint": "^9.0.0",
		"lint-staged": ">=12.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0"
	},
	"peerDependenciesMeta": {
		"@biomejs/biome": {
			"optional": true
		},
		"@commitlint/cli": {
			"optional": true
		},
		"@commitlint/config-conventional": {
			"optional": true
		},
		"@commitlint/prompt-cli": {
			"optional": true
		},
		"@eslint/js": {
			"optional": true
		},
		"eslint": {
			"optional": true
		},
		"eslint-plugin-jest": {
			"optional": true
		},
		"lint-staged": {
			"optional": true
		},
		"typescript": {
			"optional": true
		},
		"typescript-eslint": {
			"optional": true
		}
	}
}
