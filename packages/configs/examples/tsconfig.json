{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@context/*": ["context/*"],
			"@hooks/*": ["hooks/*"],
			"@public/*": ["../public/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"exclude": ["build", "dist", "node_modules", "tmp", "**/*.spec.ts", "**/*.test.ts", "**/*.tmp.ts"],
	"extends": ["@hyoretsu/configs/ts"],
	"include": ["./*.cjs", "./*.js", "./*.mjs", "./*.ts", "scripts/*.ts", "src/**/*.ts", "src/**/*.tsx"]
}
