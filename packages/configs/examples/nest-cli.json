{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"compilerOptions": {
		"deleteOutDir": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"dtoFileNameSuffix": ["body.ts", "dto.ts", "query.ts", "return.ts"]
				}
			}
		]
	},
	"exclude": ["**/*.spec.ts", "**/*.test.ts", "**/test/**/*"],
	"sourceRoot": "src"
}
