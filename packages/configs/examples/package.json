{
	"name": "project",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "",
		"dev": "",
		"format": "bun format:biome . & bun format:eslint .",
		"format:biome": "biome check --diagnostic-level=error --write --unsafe",
		"format:eslint": "eslint --quiet --fix",
		"generate": "(prisma generate && npm run format:biome ./src/infra/sql/kysely/types.ts) || true",
		"migrate": "prisma migrate dev --create-only && bun run generate",
		"migrate:dev": "prisma migrate dev && bun run generate",
		"migrate:deploy": "prisma migrate deploy",
		"postinstall": "bun run generate",
		"prepare": "bun ./prepare.ts || true",
		"test": "bun test",
		"start": "",
		"start:debug": "",
		"start:prod": ""
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@eslint/js": "^9.39.2",
		"@huggingface/transformers": "^3.8.1",
		"@hyoretsu/configs": "^1.2.0",
		"@tsconfig/bun": "^1.0.10",
		"@types/bun": "^1.3.8",
		"@types/node": "^25.1.0",
		"committier": "^0.3.0-beta.1",
		"eslint": "^9.39.2",
		"eslint-config-biome": "^2.1.3",
		"git-commit-msg-linter": "^5.0.8",
		"lint-staged": "^16.2.7",
